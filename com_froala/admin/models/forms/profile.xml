                    class="inputbox"
                    default="jpeg, jpg, png, gif"
					rows="1"
                    />
            <field
                    name="allowed_file_ext"
                    type="textarea"
                    label="COM_FROALA_ALLOWEDFILEEXT"
                    description="COM_FROALA_ALLOWEDFILEEXT_DESC"
                    class="inputbox"
                    default="zip,doc,xls,xlsx,docx"
					rows="1"
                    />
            <field
                    name="allowed_file_types"
                    type="textarea"
                    label="COM_FROALA_ALLOWEDFILETYPES"
                    description="COM_FROALA_ALLOWEDFILETYPES_DESC"
                    class="inputbox"
                    default="image/jpeg,image/gif,image/png,image/bmp,application/x-shockwave-flash,application/msword,application/excel,application/pdf,application/powerpoint,text/plain,application/x-zip,application/zip,application/x-zip-compressed"
					rows="1"
                    />

        </fieldset>

        <fieldset name="buttons" label="COM_FROALA_BUTTONS_FIELDSET" addfieldpath="administrator/components/com_froala/models/fields">
            <field
                    name="buttons"
                    type="buttons"
                    multiple="true"
                    label="COM_FROALA_BUTTONS"
                    description="COM_FROALA_BUTTONS_DESC"
                    default=""
                    />
        </fieldset>

    </fields>
