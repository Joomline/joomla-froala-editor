<?xml version="1.0"?>
<form>
    <fields>
        <field name="title"
               type="text"
               label="JGLOBAL_TITLE"
               description="JFIELD_TITLE_DESC"
               required="true"
               class="inputbox"
               size="40"
                />
        <field
                name="description"
                type="textarea"
                label="JGLOBAL_DESCRIPTION"
                description="JGLOBAL_DESCRIPTION"
                size="100"
                class="inputbox input-xxlarge"
				rows="1"
                />



        <fieldset name="default" label="COM_FROALA_MAIN_TAB">

            <field name="id"
                   type="text"
                   default="0"
                   label="JGLOBAL_FIELD_ID_LABEL"
                   readonly="true"
                    />
            <field
                    name="published"
                    type="list"
                    label="JSTATUS"
                    description="JFIELD_PUBLISHED_DESC"
                    class="chzn-color-state"
                    filter="intval"
                    size="1"
                    default="1">
                <option value="1">JPUBLISHED</option>
                <option value="0">JUNPUBLISHED</option>
            </field>

            <field
                    name="default"
                    type="list"
                    label="JDEFAULT"
                    description="JDEFAULT"
                    class="chzn-color-state"
                    filter="intval"
                    size="1"
                    default="1">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>

            <field
                    name="user_groups"
                    type="usergrouplist"
                    default="2"
                    multiple="true"
                    label="COM_FROALA_USER_GROUPS"
                    description="COM_FROALA_USER_GROUPS_DESC">
            </field>

        </fieldset>

        <fieldset name="paths" label="COM_FROALA_PATHS_FIELDSET">
            <field
                    name="images_load_url"
                    type="text"
                    label="COM_FROALA_IMAGELOADURL"
                    description="COM_FROALA_IMAGELOADURL_DESC"
                    class="inputbox"
                    default="images/{userId}"
                    />
            <field
                    name="files_upload_url"
                    type="text"
                    label="COM_FROALA_FILESUPLOADURL"
                    description="COM_FROALA_FILESUPLOADURL_DESC"
                    class="inputbox"
                    default="images/{userId}"
                    />
        </fieldset>



        <fieldset name="permissions" label="COM_FROALA_PERMISSIONS_FIELDSET">
            <field
                    name="sanitize_url"
                    type="radio"
                    label="COM_FROALA_SANITIZE_URL"
                    description="COM_FROALA_SANITIZE_URL_DESC"
                    class="btn-group btn-group-yesno"
                    default="1"
                    >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                    name="disable_right_click"
                    type="radio"
                    label="COM_FROALA_DISABLE_RIGHT_CLICK"
                    description="COM_FROALA_DISABLE_RIGHT_CLICK_DESC"
                    class="btn-group btn-group-yesno"
                    default="1"
                    >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                    name="paragraphy"
                    type="radio"
                    label="COM_FROALA_PARAGRAPHY"
                    description="COM_FROALA_PARAGRAPHY_DESC"
                    class="btn-group btn-group-yesno"
                    default="1"
                    >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                    name="plain_paste"
                    type="radio"
                    label="COM_FROALA_PLAINPASTE"
                    description="COM_FROALA_PLAINPASTE_DESC"
                    class="btn-group btn-group-yesno"
                    default="0"
                    >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                    name="convert_urls"
                    type="radio"
                    label="COM_FROALA_CONVERTURLS"
                    description="COM_FROALA_CONVERTURLS_DESC"
                    class="btn-group btn-group-yesno"
                    default="1"
                    >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                    name="allow_media_manager"
                    type="radio"
                    label="COM_FROALA_MEDIA_MANAGER"
                    description="COM_FROALA_MEDIA_MANAGER_DESC"
                    class="btn-group btn-group-yesno"
                    default="1"
                    >
                <option value="1">JON</option>
                <option value="0">JOFF</option>
            </field>
            <field
                    name="allow_comments"
                    type="radio"
                    label="COM_FROALA_ALLOWCOMMENTS"
                    description="COM_FROALA_ALLOWCOMMENTS_DESC"
                    class="btn-group btn-group-yesno"
                    default="1"
                    >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>

            <field
                    name="allow_script"
                    type="radio"
                    label="COM_FROALA_ALLOWSCRIPT"
                    description="COM_FROALA_ALLOWSCRIPT_DESC"
                    class="btn-group btn-group-yesno"
                    default="0"
                    >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                    name="allow_style"
                    type="radio"
                    label="COM_FROALA_ALLOWSTYLE"
                    description="COM_FROALA_ALLOWSTYLE_DESC"
                    class="btn-group btn-group-yesno"
                    default="0"
                    >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>

            <field
                    name="shortcuts"
                    type="radio"
                    label="COM_FROALA_SHORTCUTS"
                    description="COM_FROALA_SHORTCUTS_DESC"
                    class="btn-group btn-group-yesno"
                    default="1"
                    >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>

            <field
                    name="resize_editor"
                    type="radio"
                    label="COM_FROALA_RESIZE_EDITOR"
                    description="COM_FROALA_RESIZE_EDITOR_DESC"
                    class="btn-group btn-group-yesno"
                    default="0"
                    >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>

            <field
                    name="store_resize_height"
                    type="radio"
                    label="COM_FROALA_STORE_RESIZE_HEIGHT"
                    description="COM_FROALA_STORE_RESIZE_HEIGHT_DESC"
                    class="btn-group btn-group-yesno"
                    default="0"
                    >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>

            <field
                    name="store_resize_days"
                    type="text"
                    label="COM_FROALA_STORE_RESIZE_DAYS"
                    description="COM_FROALA_STORE_RESIZE_DAYS_DESC"
                    class="inputbox"
                    default="365"
                    filter="intval"
                    />

