                <option value="wrap">wrap</option>
            </field>
            <field
                    name="allowed_tags"
                    type="textarea"
                    label="COM_FROALA_ALLOWEDTAGS"
                    description="COM_FROALA_ALLOWEDTAGS_DESC"
                    class="inputbox"
                    default=""
					rows="1"
                    />
            <field
                    name="allowed_blank_tags"
                    type="textarea"
                    label="COM_FROALA_ALLOWEDBLANKTAGS"
                    description="COM_FROALA_ALLOWEDBLANKTAGS_DESC"
                    class="inputbox"
                    default=""
					rows="1"
                    />

            <field
                    name="max_file_size"
                    type="text"
                    label="COM_FROALA_MAXFILESIZE"
                    description="COM_FROALA_MAXFILESIZE_DESC"
                    class="inputbox"
                    default="2"
                    />
            <field
                    name="max_image_size"
                    type="text"
                    label="COM_FROALA_MAXIMAGESIZE"
                    description="COM_FROALA_MAXIMAGESIZE_DESC"
                    class="inputbox"
                    default="2"
                    />
            <field
                    name="paste_image"
                    type="radio"
                    label="COM_FROALA_PASTEIMAGE"
                    description="COM_FROALA_PASTEIMAGE_DESC"
                    class="btn-group btn-group-yesno"
                    default="0"
                    >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>

            <field
                    name="image_upload"
                    type="radio"
                    label="COM_FROALA_IMAGEUPLOAD"
                    description="COM_FROALA_IMAGEUPLOAD_DESC"
                    class="btn-group btn-group-yesno"
                    default="0"
                    >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                    name="image_delete"
                    type="radio"
                    label="COM_FROALA_IMAGEDELETE"
